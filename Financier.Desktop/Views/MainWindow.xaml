<Window x:Class="Financier.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Financier for Windows™" 
        MinHeight="185" MinWidth="500"
        Height="185" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Margin="5" Grid.Row="0" Command="{Binding AccountsViewCommand}">Accounts</Button>
        <Button Margin="5" Grid.Row="1" Command="{Binding AccountRelationshipsViewCommand}">Account Relationships</Button>
        <Button Margin="5" Grid.Row="2" Command="{Binding BalanceSheetViewCommand}">Balance Sheet</Button>
        <Button Margin="5" Grid.Row="3" Command="{Binding BudgetsViewCommand}">Budgets</Button>
        <Button Margin="5" Grid.Row="4" Command="{Binding TransactionsViewCommand}">Transactions</Button>
    </Grid>
</Window>
