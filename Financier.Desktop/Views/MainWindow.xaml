<Window x:Class="Financier.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Financier.Desktop.Views"
        mc:Ignorable="d"
        Title="Financier for Windows™" Height="400" Width="810">
    <Grid>
        <TabControl>
            <TabItem Header="Transactions">
                <views:TransactionsControl DataContext="{Binding TransactionsViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
